<header>
  <h1>
    <%= @burger.name %>
  </h1>
  <div class="flex-header-container">
    <form method="get" action="/burgers/<%= @burger.id %>/update" class="flex-header-item">
      <input type="submit" value="EDIT" class="header-button">
    </form>
    <form method="post" action="/burgers/<%= @burger.id %>/delete" class="flex-header-item">
      <input type="submit" value="DELETE" class="header-button">
    </form>
  </div>
</header>

<div class="flex-summary-container">
  <div class="flex-summary-item">
    <h3>
      <a href="/burgers/<%= @burger.id %>/summary">
        <%= @burger.name %>
      </a>
    </h3>
    @
    <a href="/eateries/<%= @burger.eateries.first.id %>/summary"><%= @burger.eateries.first.name %></a>
    <br/>
    <br/>
    <% @burger.types.each do |type|%>
    <%= type.name %>
    <br/>
    <% end %>
    <% if !(@burger.deals.empty?) %>
    <div class="corner-deal">
      <img src="/images/deal.png" class="corner-deal-heaight"/>
      <div class="display-deal">
        <p>
          <%= "#{@burger.deals.first.label}, #{@burger.deals.first.days.first.name}" %>
        </p>
      </div>
    </div>
    <% end %>
  </div>
</div>
